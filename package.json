{
  "name": "ts-api-validator",
  "version": "0.0.5",
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "https://github.com/tsigel/ts-api-validator.git"
  },
  "dependencies": {
    "dts-gen": "^0.5.6",
    "dts-generator": "^2.1.0",
    "ts-utils": "^4.0.2"
  },
  "scripts": {
    "build": "npm run bundle-src && npm run uglify",
    "bundle-src": "node_modules/.bin/ts-bundler --out ./dist/ts-api-validator.js --config ./tsconfig.json --main index --standalone ts-api-validator",
    "bundle-test": "node_modules/.bin/ts-bundler --out ./test/test.js --config ./test/tsconfig.json --main index",
    "uglify": "node_modules/.bin/uglifyjs ./dist/ts-api-validator.js -o ./dist/ts-api-validator.min.js",
    "pretest": "npm run bundle-test",
    "test": "node_modules/.bin/karma start test/karma.conf.js",
    "preversion": "npm run test",
    "postversion": "git push origin HEAD && git push --tags && npm publish"
  },
  "devDependencies": {
    "@types/chai": "^4.0.2",
    "@types/karma": "^0.13.36",
    "@types/mocha": "^2.2.41",
    "chai": "^4.1.1",
    "karma": "^1.7.0",
    "karma-chrome-launcher": "^2.2.0",
    "karma-commonjs": "^1.0.0",
    "karma-mocha": "^1.3.0",
    "mocha": "^3.5.0",
    "ts-bundler": "0.0.2",
    "typescript": "^2.4.2",
    "uglify-js": "^3.0.25"
  }
}
